<main id="bg-{{categoria}}" class="game-container flex-grow-1 d-flex flex-column">
    <div class="container-fluid h-100 d-flex flex-column text-white py-3">
        <div class="d-flex justify-content-center mb-2">
            <div class="row w-75 g-3 align-items-center">
                <div class="col">
                    <div class="info-box bg-white bg-opacity-25 p-3 rounded-3 text-center text-nowrap fw-semibold d-flex align-items-center justify-content-center fs-4" style="min-height: 70px;">
                        <i class="bi bi-dice-1 fs-4 me-2"></i> Categor√≠a: {{categoria}}
                    </div>
                </div>
                <div class="col">
                    <div class="info-box bg-white bg-opacity-25 p-3 rounded-3 text-center text-nowrap fw-semibold d-flex align-items-center justify-content-center fs-4" style="min-height: 70px;">
                        <i class="bi bi-clock fs-4 me-2"></i> <span id="reloj"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="info-box bg-white bg-opacity-25 p-3 rounded-3 text-center text-nowrap fw-semibold d-flex align-items-center justify-content-center fs-4" style="min-height: 70px;">
                        <i class="bi bi-trophy fs-4 me-2"></i> Puntos: {{puntos}}
                    </div>
                </div>
                <div class="col">
                    <div class="d-flex align-items-center justify-content-center" style="min-height: 70px;">
                        <button class="btn bg-warning bg-opacity-75 text-dark rounded-pill w-100 py-2 fw-semibold shadow-sm">
                            <i class="bi bi-exclamation-triangle fs-4 me-2"></i> Reportar pregunta
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex-grow-1 d-flex align-items-center justify-content-center px-3">
            <div class="question-box bg-white text-dark p-5 rounded-4 shadow-lg text-center w-100 mx-auto" style="max-width: 800px;">
                <h3 class="mb-4">{{pregunta}}</h3>

                <form method="post" action="./validarResultado">
                    <input type="hidden" name="pregunta_id" value="{{id}}">
                    <div class="row row-cols-1 g-3 w-100 mb-4">
                        {{#respuestas}}
                            <div class="col">
                                <button type="submit" name="respuesta" value="{{id_respuesta}}"
                                        class="btn w-100 text-dark py-3 rounded-pill border-0 text-center shadow">
                                    {{descripcion}}
                                </button>
                            </div>
                        {{/respuestas}}
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<script src="/public/js/pregunta.js"></script>
