{{#datosUsuario}}
    <div class="container-fluid min-vh-100 bg-light py-4 contenedor-perfil">
        <!-- HEADER USUARIO -->
        <div class="row g-3 mb-4 align-items-center">
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title mb-0 text-primary fw-bold">{{nickname}}</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4 offset-md-1">
                <div class="card shadow-sm border-0 bg-success-subtle">
                    <div class="card-body text-center d-flex justify-content-evenly">
                        <div>
                            <h6 class="mb-0 text-success fw-semibold">Puntaje total:</h6>
                            <span class="display-6 fw-bold text-success">{{puntaje_alcanzado}}</span>
                        </div>
                        <div>
                            <h6 class="mb-0 text-success fw-semibold">Racha mas larga:</h6>
                            <span class="display-6 fw-bold text-success">{{rachaMasLarga}}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-md-6 border-end p-4">
                <div class="row align-items-stretch" style="min-height: 200px;">
                    <div class="col-md-8 d-flex flex-column justify-content-between">
                        <div class="form-control mb-2 bg-white shadow-sm">{{nombre_completo}}</div>
                        <div class="form-control mb-2 bg-white shadow-sm">
                            <strong>Usuario desde:</strong> {{fecha_registro}}
                        </div>
                        <div class="form-control mb-2 bg-white shadow-sm">{{email}}</div>
                    </div>
                    <div class="col-md-4 d-flex justify-content-center align-items-start">
                        <img src="/public/images/profiles/{{foto_perfil}}"
                             class="img-thumbnail rounded-3 shadow-sm"
                             style="height: 200px; width: auto; object-fit: cover;"
                             alt="Foto perfil">
                    </div>
                </div>
                <div style="max-width: 1000px; margin: auto">
                    <div class="ratio ratio-16x9 shadow-sm rounded-3 overflow-hidden border mt-4">
                        <iframe
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3281.3641581326856!2d-58.5628052!3d-34.670757599999995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcc62cc3ef7083%3A0x8867107f425fade5!2sUniversidad%20Nacional%20de%20La%20Matanza!5e0!3m2!1ses!2sar!4v1748119067840!5m2!1ses!2sar"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                    <br>
                    <p><i class="bi bi-geo-alt-fill text-danger fs-3"></i> {{pais}}, {{ciudad}}</p>
                    <!-- Agregar que se muestre la direccion ingresada desde el mapa-->
                </div>
            </div>

            <!-- Tabla historial de partidas -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h6 class="fw-bold mb-3 text-secondary">Historial de partidas</h6>
                        <div class="overflow-auto" style="max-height: 300px;">
                            <table class="table table-striped table-bordered align-middle">
                                <thead class="table-light">
                                <tr>
                                    <th>Partida jugada</th>
                                    <th>Puntaje</th>
                                </tr>
                                </thead>
                                {{#partidasYPuntajesUsuario}}
                                <tbody>
                                <tr>
                                    <td>{{indice}}</td>
                                    <td>{{resultado}}</td>
                                </tr>
                                </tbody>
                                {{/partidasYPuntajesUsuario}}
                            </table>
                        </div>
                    </div>
                </div>
                <!-- QR -->
                <!--Generara QR propio para que al escanearlo lleve a donde corresponde-->
                <div class="mt-4">
                    <div class="text-center">
                        <img src="/perfil/generarQr?id={{id}}" width="250" height="250"
                             class="img-thumbnail rounded-2 shadow-sm border border-secondary-subtle" alt="QR ejemplo">
                        <p class="mt-2 text-muted">Comparte tu perfil con otros jugadores!</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">

        </div>
    </div>
{{/datosUsuario}}
