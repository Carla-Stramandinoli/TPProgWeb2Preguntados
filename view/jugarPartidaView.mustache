

<div class="flex-fill container d-flex flex-column justify-content-center text-center">
    {{#primerInicio}}
        <h2>Iniciar partida</h2>
    {{/primerInicio}}
    {{#partidaEnCurso}}
        <h2 class="mt-2">Partida en curso</h2>
        <div class="row mb-4 py-3">
            <div class="col">
                <h4 class="info-box bg-success"> Puntos: {{puntos}}</h4>
            </div>
            <div class="col">
                <h4 class="info-box bg-success"> Racha mas larga: {{racha}}</h4>
            </div>
        </div>
    {{/partidaEnCurso}}


    <div id="ruleta-container" class="position-relative mx-auto my-4" style="width: 300px; height: 300px;">

        <img src="/public/images/icons/flecha.png"
             style="width: 40px; height: 40px; position: absolute; top: -20px; left: 50%; transform: translateX(-50%); z-index: 2;">


        <canvas id="ruleta" width="300" height="300"
                style="border: 5px solid #333; border-radius: 50%;"></canvas>


        <div class="position-absolute top-50 start-50 translate-middle">
            <button class="btn btn-primary w-auto py-3 rounded-5" id="boton-girar" >Girar</button>
        </div>
    </div>

    <h4 id="resultado" class="mt-3"></h4>
</div>
