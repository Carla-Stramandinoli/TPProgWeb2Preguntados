

<div class="flex-fill container d-flex flex-column justify-content-center text-center">
    {{#primerInicio}}
        <h1>Iniciar partida</h1>
    {{/primerInicio}}
    {{#partidaEnCurso}}
        <h1 class="mt-2">Partida en curso</h1>
        <div class="row mb-4 py-3">
            <div class="col">
                <h4 class="info-box bg-success"> Puntos: {{puntos}}</h4>
            </div>
            <div class="col">
                <h4 class="info-box bg-success"> Racha mas larga: {{racha}}</h4>
            </div>
        </div>
    {{/partidaEnCurso}}

    <div id="ruleta-container" class="position-relative mx-auto my-4" style="width: 500px; height: 500px;">
        <img src="/public/images/icons/flecha.png"
             style="width: 60px; height: 60px; position: absolute; top: -20px; left: 50%; transform: translateX(-44%) rotate(0deg); z-index: 2;">

        <canvas id="ruleta" width="500" height="500"
                style="border: 5px solid #333; border-radius: 50%; display: block; margin: 0 auto;"></canvas>

        <div class="position-absolute top-50 start-50 translate-middle">
            <button class="btn btn-primary py-3 px-4 rounded-5" id="boton-girar">Girar</button>
        </div>
    </div>

    <h4 id="resultado" class="mt-3"></h4>
</div>
<script>
    const categoriaElegidaDesdeBack = "{{categoria}}";
</script>
<script src="/public/js/jugarPartida.js"></script>