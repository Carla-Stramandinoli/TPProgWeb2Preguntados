<div class="container-fluid">
    <div class="d-flex justify-content-center row">
        <form action="/ingreso/loginValidator" method="POST" class="card d-flex flex-column gap-3 p-2 m-2 col-sm-11 col-md-6 col-lg-5 col-xl-4 col-xxl-3 my-5 p-4 fs-4">

            <h3 class="m-auto">Iniciar Sesion</h3>

            <input type="text" name="nickname" placeholder="Nombre de usuario" required>
            <input type="password" name="contrasenia" placeholder="Contraseña" required>
            {{#msjError}}
                <p class="alert alert-danger">{{msjError}}</p>
            {{/msjError}}
            <input type="submit"  value="Iniciar Sesion">

            <p class="m-auto">¿No tenes cuenta? <a href="/ingreso/register" class="text-decoration-none">Registrate</a></p>

        </form>
    </div>
</div>