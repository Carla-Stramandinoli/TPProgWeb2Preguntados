<main class="container-fluid flex-fill py-4">
    <div class="d-flex flex-column align-items-center">
        <h2 class="mb-4 text-primary">Panel de Editor</h2>

        <div class="row w-100 mb-4">
            <!-- Preguntas reportadas -->
            <div class="col-lg-6 mb-3">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-warning-subtle border-0">
                        <h6 class="fw-bold mb-0 text-warning-emphasis"> <i class="bi bi-exclamation-diamond fs-5"></i> Preguntas Reportadas</h6>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive" style="max-height: 300px;">
                            <table class="table table-hover mb-0">
                                <thead class="table-light sticky-top">
                                <tr>
                                    <th class="fw-bold" style="min-width: 200px;">Enunciado</th>
                                    <th class="fw-bold text-center" style="min-width: 100px;">Reportes</th>
                                    <th class="fw-bold text-center" style="min-width: 120px;">Acciones</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#preguntasReportadas}}
                                    <tr class="align-middle">
                                        <td class="px-3 py-3">
                                            <div class="text-wrap fw-medium" style="max-width: 250px;">
                                                {{enunciado}}
                                            </div>
                                        </td>
                                        <td class="text-center px-3 py-3">
                                            <span class="badge bg-warning-subtle text-warning-emphasis fs-6">
                                                {{cantidad_reportes}}
                                            </span>
                                        </td>
                                        <td class="text-center px-3 py-3">
                                            <div class="d-flex justify-content-center gap-1">
                                                <form action="/editor/editarPregunta/{{id}}">
                                                    <button class="btn btn-outline-primary px-1 py-0 w-75" style="font-size: 1rem;">
                                                    Ver
                                                    </button>
                                                </form>

                                                <form method="POST" action="/editor/eliminarPregunta" style="display: inline;">
                                                    <input type="hidden" name="id" value="{{id}}">
                                                    <button type="submit" class="btn btn-outline-danger px-1 py-0 w-75" style="font-size: 1rem;">
                                                        Eliminar
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {{/preguntasReportadas}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Preguntas existentes -->
            <div class="col-lg-6 mb-3">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-info-subtle border-0">
                        <h6 class="fw-bold mb-0 text-info-emphasis"><i class="bi bi-question-diamond fs-5"></i>  Preguntas Existentes</h6>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive" style="max-height: 300px;">
                            <table class="table table-hover mb-0">
                                <thead class="table-light sticky-top">
                                <tr>
                                    <th class="fw-bold" style="min-width: 200px;">Enunciado</th>
                                    <th class="fw-bold text-center" style="min-width: 120px;">Acciones</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#preguntasExistentes}}
                                    <tr class="align-middle">
                                        <td class="px-3 py-3">
                                            <div class="text-wrap fw-medium" style="max-width: 250px;">
                                                {{enunciado}}
                                            </div>
                                        </td>
                                        <td class="text-center px-3 py-3">
                                            <div class="d-flex justify-content-center gap-1">
                                                <form method="PUT" action="/editor/editarPregunta/{{id}}">
                                                    <button class="btn btn-outline-primary px-1 py-0 w-75" style="font-size: 1rem;">
                                                        Editar
                                                    </button>
                                                </form>

                                                <form method="POST" action="/editor/eliminarPregunta" style="display: inline;">
                                                    <input type="hidden" name="id" value="{{id}}">
                                                    <button type="submit" class="btn btn-outline-danger px-1 py-0 w-75" style="font-size: 1rem;">
                                                        Eliminar
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {{/preguntasExistentes}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="w-100">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success-subtle border-0">
                    <h6 class="fw-bold mb-0 text-success-emphasis"><i class="bi bi-lightbulb fs-5"></i> Preguntas Sugeridas</h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive" style="max-height: 400px;">
                        <table class="table table-hover mb-0">
                            <thead class="table-light sticky-top">
                            <tr>
                                <th class="fw-bold" style="min-width: 250px;">Enunciado</th>
                                <th class="fw-bold text-success" style="min-width: 150px;">Respuesta Correcta</th>
                                <th class="fw-bold text-danger" style="min-width: 130px;">Respuesta 1</th>
                                <th class="fw-bold text-danger" style="min-width: 130px;">Respuesta 2</th>
                                <th class="fw-bold text-danger" style="min-width: 130px;">Respuesta 3</th>
                                <th class="fw-bold text-danger" style="min-width: 130px;">Categoria</th>
                                <th class="fw-bold text-center" style="min-width: 160px;">Acciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#preguntasSugeridas}}
                                <tr class="align-middle">
                                    <td class="px-3 py-3">
                                        <div class="fw-medium text-wrap" style="max-width: 300px;">
                                            {{enunciado}}
                                        </div>
                                    </td>
                                    <td class="px-3 py-3">
                                        <span class="badge bg-success-subtle text-success-emphasis px-2 py-2 rounded-pill text-wrap">
                                            {{respuesta_correcta}}
                                        </span>
                                    </td>
                                    <td class="px-3 py-3">
                                        <span class="badge bg-danger-subtle text-danger-emphasis px-2 py-2 rounded-pill text-wrap">
                                            {{respuesta_1}}
                                        </span>
                                    </td>
                                    <td class="px-3 py-3">
                                        <span class="badge bg-danger-subtle text-danger-emphasis px-2 py-2 rounded-pill text-wrap">
                                            {{respuesta_2}}
                                        </span>
                                    </td>
                                    <td class="px-3 py-3">
                                        <span class="badge bg-danger-subtle text-danger-emphasis px-2 py-2 rounded-pill text-wrap">
                                            {{respuesta_3}}
                                        </span>
                                    </td>
                                    <td class="px-3 py-3">
                                        <span class="badge bg-warning-subtle text-warning-emphasis fs-6">
                                            {{categoria}}
                                        </span>
                                    </td>
                                    <td class="text-center px-3 py-3">
                                        <div class="d-flex justify-content-center gap-1">
                                            <form method="POST" action="/editor/confirmarPregunta/{{id}}">
                                                <button class="btn btn-outline-success px-1 py-0 w-75" style="font-size: 1rem;">
                                                    Aceptar
                                                </button>
                                            </form>

                                            <form method="POST" action="/editor/eliminarPregunta" style="display: inline;">
                                                <input type="hidden" name="id" value="{{id}}">
                                                <button type="submit" class="btn btn-outline-danger px-1 py-0 w-75" style="font-size: 1rem;">
                                                    Denegar
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {{/preguntasSugeridas}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>